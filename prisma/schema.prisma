generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id       String @id @default(auto()) @map("_id") @db.ObjectId
    forename String
    surname  String
    email    String @unique
    password String

    tokens UserToken[]
}

model UserToken {
    id     String @id @default(auto()) @map("_id") @db.ObjectId
    userID String
    token  String

    user User @relation(fields: [userID], references: [id])
}
